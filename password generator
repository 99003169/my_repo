    def generate_password(self):
        generated_password = random.choice(string.ascii_uppercase) 
        generated_password = generated_password + random.choice(string.ascii_lowercase)
        generated_password = generated_password + random.choice(string.digits) 
        generated_password = generated_password + random.choice(string.punctuation)
        for a in range(password_length - 4):
            generated_password = generated_password + random.choice(string.ascii_uppercase + string.ascii_lowercase + string.digits + string.punctuation)
    password_list = list(generated_password)
    random.shuffle(password_list)
    generated_password = ''.join(password_list)
    print("\nGenerated password: ", generated_password)
    
        
        
